<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<VBox fx:id="cardContainer" xmlns:fx="http://javafx.com/fxml" 
      fx:controller="asedi.controllers.UsuarioLocalCardController" 
      styleClass="local-card" 
      stylesheets="@../../styles/localCard.css"
      maxWidth="250"
      spacing="0">
    
    <!-- Imagen del local -->
    <StackPane styleClass="image-container">
        <ImageView fx:id="imagenLocal" fitWidth="250" fitHeight="150" preserveRatio="false" 
                   style="-fx-background-color: #f5f5f5;">
            <image>
                <Image url="@/images/locales/localDummy.png" />
            </image>
        </ImageView>
        <StackPane styleClass="overlay"/>
    </StackPane>
    
    <!-- Contenido de la tarjeta -->
    <VBox styleClass="content" spacing="5">
        <Label fx:id="nombreLabel" styleClass="title" />
        <Label fx:id="descripcionLabel" styleClass="description" wrapText="true" />
        <Button text="Ver productos" onAction="#verProductos" styleClass="action-button" />
    </VBox>
</VBox>