<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" 
            fx:controller="asedi.controllers.gerencia.MenuController"
            stylesheets="@/styles/adminDashboard/adminDashboard.css">
    
    <top>
        <HBox style="-fx-padding: 20;" spacing="10">
            <Label text="Gestión de Menús" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Nuevo Menú" onAction="#mostrarFormularioNuevo" style="-fx-background-color: #00D561; -fx-text-fill: white;"/>
        </HBox>
    </top>
    
    <center>
        <VBox style="-fx-padding: 0 20 20 20;" spacing="20">
            <!-- Barra de búsqueda -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="txtBuscar" promptText="Buscar menús..." style="-fx-pref-width: 300;"/>
                <Button text="Buscar" onAction="#buscarMenus"/>
            </HBox>
            
            <!-- Tabla de menús -->
            <TableView fx:id="tablaMenus" style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <columns>
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="200"/>
                    <TableColumn fx:id="colDescripcion" text="Descripción" prefWidth="350"/>
                    <TableColumn fx:id="colAcciones" text="Acciones" prefWidth="150" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
            
            <!-- Controles de paginación -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Anterior" onAction="#paginaAnterior"/>
                <Label text="Página 1"/>
                <Button text="Siguiente" onAction="#paginaSiguiente"/>
            </HBox>
        </VBox>
    </center>
    
    <!-- Panel de carga -->
    <StackPane fx:id="loadingPane" visible="false" style="-fx-background-color: rgba(0,0,0,0.5);">
        <VBox alignment="CENTER" spacing="10">
            <ProgressIndicator style="-fx-progress-color: white;" />
            <Label text="Cargando..." style="-fx-text-fill: white; -fx-font-size: 16px;"/>
        </VBox>
    </StackPane>
    
</BorderPane>
