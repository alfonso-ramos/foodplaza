<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" 
      fx:controller="asedi.controllers.gerencia.MenuFormController"
      stylesheets="@/styles/gerencia/menus/form_menu.css">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
    </padding>
    
    <Label text="Datos del Menú" styleClass="titulo-formulario titulo-seccion"/>
    
    <GridPane hgap="10" vgap="10" styleClass="form-pane">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="100"/>
            <ColumnConstraints hgrow="ALWAYS" minWidth="250"/>
        </columnConstraints>
        
        <!-- Nombre -->
        <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <VBox GridPane.rowIndex="0" GridPane.columnIndex="1" spacing="2">
            <TextField fx:id="txtNombre" styleClass="text-field"/>
            <Label fx:id="lblErrorNombre" styleClass="error-label"/>
        </VBox>
        
        <!-- Descripción -->
        <Label text="Descripción:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextArea fx:id="txtDescripcion" GridPane.rowIndex="1" GridPane.columnIndex="1" 
                  wrapText="true" prefRowCount="3" styleClass="text-area"/>
    </GridPane>
    
    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
        <Button text="Cancelar" onAction="#cancelar" styleClass="btn-secundario"/>
        <Button text="Guardar" onAction="#guardar" styleClass="btn-primario"/>
    </HBox>
</VBox>
