<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>

<BorderPane xmlns:fx="http://javafx.com/fxml" 
            fx:controller="asedi.controllers.gerencia.ProductoController"
            stylesheets="@/styles/adminDashboard/adminDashboard.css">
    
    <top>
        <VBox style="-fx-background-color: #ffffff; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
            <HBox style="-fx-padding: 20;" spacing="10">
                <VBox alignment="CENTER_LEFT" spacing="5">
                    <Label text="Gestión de Productos" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                    <Label text="Administra los productos del menú" style="-fx-text-fill: #666666;"/>
                </VBox>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Nuevo Producto" onAction="#nuevoProducto" style="-fx-background-color: #00D561; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16;">
                    <graphic>
                        <Text style="-fx-font-family: 'Arial'; -fx-font-size: 16;" text="+"/>
                    </graphic>
                </Button>
            </HBox>
            
            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 0 20 20 20;">
                <TextField fx:id="txtBuscar" promptText="Buscar productos..." style="-fx-pref-width: 250; -fx-pref-height: 35; -fx-font-size: 14;" />
                
                <ComboBox fx:id="cmbMenu" promptText="Filtrar por menú" style="-fx-pref-width: 250; -fx-pref-height: 35; -fx-font-size: 14;" />
                
                <Button text="Buscar" onAction="#buscarProductos" style="-fx-background-color: #4A90E2; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-pref-height: 35;" />
                <Button text="Limpiar" onAction="#limpiarBusqueda" style="-fx-background-color: #95A5A6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-pref-height: 35;" />
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <TableView fx:id="tblProductos" style="-fx-background-color: transparent;" >
                <columns>
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="200" />
                    <TableColumn fx:id="colDescripcion" text="Descripción" prefWidth="300" />
                    <TableColumn fx:id="colPrecio" text="Precio" prefWidth="100" />
                    <TableColumn fx:id="colDisponible" text="Disponible" prefWidth="100" />
                    <TableColumn fx:id="colAcciones" text="Acciones" prefWidth="200" />
                </columns>
            </TableView>
            
            <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
                <Button text="Anterior" onAction="#paginaAnterior" style="-fx-background-color: #95A5A6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16;" />
                <Label fx:id="lblPagina" text="Página 1" style="-fx-padding: 0 10;" />
                <Button text="Siguiente" onAction="#paginaSiguiente" style="-fx-background-color: #95A5A6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16;" />
            </HBox>
        </VBox>
    </center>
    
    <bottom>
        <StackPane fx:id="loadingPane" visible="false" style="-fx-background-color: rgba(0,0,0,0.5);">
            <ProgressIndicator progress="-1" style="-fx-progress-color: white;" />
        </StackPane>
    </bottom>
    
</BorderPane>
