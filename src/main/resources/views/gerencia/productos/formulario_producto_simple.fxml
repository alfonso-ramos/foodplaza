<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="asedi.controllers.gerencia.ProductoFormController"
            stylesheets="@/styles/agregarPlaza.css"
            fx:id="contentPane">
    
    <center>
        <ScrollPane fitToWidth="true" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER" style="-fx-background: #f5f5f5;">
            <VBox style="-fx-padding: 20; -fx-spacing: 20; -fx-max-width: 800;" alignment="CENTER">
                <!-- Título del formulario -->
                <Label fx:id="txtTitulo" text="Nuevo Producto" styleClass="title" />
                
                <!-- Contenedor del formulario -->
                <GridPane styleClass="form-container" style="-fx-padding: 30; -fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);" alignment="TOP_CENTER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="350" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="350" />
                    </columnConstraints>
                    
                    <!-- Fila 1: Nombre y Categoría -->
                    <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="Nombre del Producto*" styleClass="label" />
                        <TextField fx:id="txtNombre" promptText="Ej: Hamburguesa Clásica" styleClass="input-field" />
                    </VBox>
                    
                    <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label text="Categoría*" styleClass="label" />
                        <ComboBox fx:id="cmbCategoria" promptText="Seleccione una categoría" styleClass="input-field" />
                    </VBox>
                    
                    <!-- Fila 2: Precio y Disponibilidad -->
                    <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <Label text="Precio*" styleClass="label" />
                        <HBox spacing="5" alignment="CENTER_LEFT">
                            <TextField fx:id="txtPrecio" promptText="0.00" styleClass="input-field" style="-fx-pref-width: 150;" />
                            <Label text="MXN" style="-fx-text-fill: #666;" />
                        </HBox>
                    </VBox>
                    
                    <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1" alignment="CENTER_LEFT">
                        <Label text="Disponibilidad" styleClass="label" />
                        <CheckBox fx:id="chkDisponible" text="Disponible" selected="true" style="-fx-padding: 5 0 0 0;" />
                    </VBox>
                    
                    <!-- Fila 3: Descripción (ocupa ambas columnas) -->
                    <VBox spacing="5" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2" style="-fx-padding: 10 0;">
                        <Label text="Descripción" styleClass="label" />
                        <TextArea fx:id="txtDescripcion" promptText="Descripción del producto..." styleClass="input-field" wrapText="true" prefRowCount="3" />
                    </VBox>
                    
                    <!-- Fila 4: Imagen del producto (ocupa ambas columnas) -->
                    <VBox GridPane.columnSpan="2" GridPane.rowIndex="3" spacing="10" style="-fx-padding: 15; -fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-border-width: 1; -fx-margin-top: 15;" alignment="TOP_LEFT">
                        <Label text="Imagen del Producto" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #333; -fx-padding: 0 0 10 0;" />
                        
                        <!-- Vista previa de la imagen -->
                        <VBox alignment="CENTER" spacing="10">
                            <ImageView fx:id="imgPreview" fitWidth="250" fitHeight="180" 
                                     preserveRatio="true" style="-fx-border-color: #ddd; -fx-border-width: 1; -fx-background-color: white;">
                                <image>
                                    <Image url="@../../../../images/placeholder-product.png"/>
                                </image>
                            </ImageView>
                        </VBox>
                        
                        <!-- Botones de imagen -->
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Button text="Seleccionar Imagen" onAction="#seleccionarImagen" 
                                    styleClass="select-images-button" style="-fx-font-size: 14; -fx-padding: 8 16;" />
                            <Button text="Eliminar Imagen" onAction="#eliminarImagen" 
                                    styleClass="btn-secundario" style="-fx-font-size: 14; -fx-padding: 8 16;" />
                        </HBox>
                        
                        <!-- Mensajes informativos -->
                        <VBox spacing="5" style="-fx-padding: 10 0 0 0;">
                            <Label text="Formatos soportados: JPG, PNG (Máx. 5MB)" style="-fx-text-fill: #666; -fx-font-size: 12;" />
                            <Label fx:id="lblErrorImagen" style="-fx-text-fill: #d32f2f; -fx-font-size: 12; -fx-wrap-text: true;" />
                        </VBox>
                    </VBox>
                    
                    <!-- Fila 5: Botones de acción -->
                    <HBox GridPane.columnSpan="2" GridPane.rowIndex="4" style="-fx-spacing: 15; -fx-padding: 20 0 0 0;" alignment="CENTER_RIGHT">
                        <Button text="Cancelar" onAction="#cancelar" styleClass="cancel-button" style="-fx-font-size: 14; -fx-padding: 8 24;" />
                        <Button fx:id="saveButton" text="Guardar Producto" onAction="#guardar" styleClass="save-button" style="-fx-font-size: 14; -fx-padding: 8 24; -fx-font-weight: bold;" />
                    </HBox>
                </GridPane>
            </VBox>
        </ScrollPane>
    </center>
    
</BorderPane>
