<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" 
            fx:controller="asedi.controllers.UsuarioDashboardController"
            stylesheets="@/styles/adminDashboard/adminDashboard.css">
    
    <!-- Sidebar izquierdo -->
    <left>
        <VBox style="-fx-background-color: #4A90E2;" spacing="10" prefWidth="200">
            <!-- Encabezado -->
            <VBox style="-fx-padding: 20; -fx-spacing: 10; -fx-alignment: CENTER;">
                <Label text="USUARIO" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label fx:id="userNameLabel" text="Usuario" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
            </VBox>
            
            <!-- Menú de navegación -->
            <VBox style="-fx-padding: 0 20 20 20;" spacing="5" VBox.vgrow="ALWAYS">
                <Label text="MENÚ PRINCIPAL" style="-fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 12px; -fx-padding: 10 0 5 15; -fx-text-transform: uppercase;"/>
                <Button text="Inicio" onAction="#cargarInicio" styleClass="menu-btn"/>
                
                <Label text="SERVICIOS" style="-fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 12px; -fx-padding: 10 0 5 15; -fx-text-transform: uppercase;"/>
                <Button text="Elegir Plaza" onAction="#cargarPlazas" styleClass="menu-btn"/>
                <Button text="Ver Órdenes" onAction="#cargarOrdenes" styleClass="menu-btn"/>
                
                <VBox VBox.vgrow="ALWAYS">
                    <!-- Espacio para expandir -->
                </VBox>
                
                <VBox style="-fx-padding: 20 0 0 0;">
                    <Button text="Cerrar Sesión" onAction="#cerrarSesion" styleClass="logout-btn"/>
                </VBox>
            </VBox>
        </VBox>
    </left>

    <!-- Barra superior -->
    <top>
        <HBox style="-fx-background-color: white; -fx-padding: 15 20; -fx-alignment: CENTER_RIGHT; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
            <Button onAction="#verCarrito" style="-fx-background-color: transparent; -fx-cursor: hand; -fx-padding: 5; -fx-graphic-text-gap: 5;">
                <HBox spacing="5" alignment="CENTER">
                    <Label text="🛒" style="-fx-font-size: 16;"/>
                    <Label fx:id="carritoBadge" text="0" style="-fx-background-color: #28a745; -fx-background-radius: 10; -fx-text-fill: white; -fx-padding: 0 6; -fx-font-size: 12; -fx-font-weight: bold;"/>
                </HBox>
            </Button>
        </HBox>
    </top>
    
    <!-- Área de contenido principal -->
    <center>
        <StackPane fx:id="contenidoPane" style="-fx-padding: 20;">
            <VBox fx:id="plazasContainer" spacing="10" style="-fx-padding: 10;"/>
        </StackPane>
    </center>
    
</BorderPane>
