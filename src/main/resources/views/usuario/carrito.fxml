<BorderPane xmlns="http://javafx.com/javafx/11.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="asedi.controllers.NuevoCarritoController"
            stylesheets="@/styles/carrito.css">
    
    <top>
        <VBox style="-fx-padding: 20; -fx-spacing: 5; -fx-alignment: CENTER;">
            <Label text="Mi Pedido" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            <Label text="Revisa y confirma tu pedido" style="-fx-text-fill: #666;" />
        </VBox>
    </top>
    
    <center>
        <VBox style="-fx-padding: 0 20 20 20;">
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background: transparent; -fx-background-color: transparent;">
                <VBox fx:id="itemsContainer" spacing="15" style="-fx-padding: 10;" />
            </ScrollPane>
            
            <!-- Estado de carrito vacÃ­o -->
            <VBox fx:id="emptyCartContainer" alignment="CENTER" spacing="20" visible="false" style="-fx-padding: 40 0;">
                <VBox style="-fx-background-color: #f0f0f0; -fx-padding: 30; -fx-background-radius: 100; -fx-alignment: center;">
                    <Label text="ðŸ›’" style="-fx-font-size: 48px;" />
                </VBox>
                <Label text="Tu carrito estÃ¡ vacÃ­o" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                <Label text="Agrega productos para continuar" style="-fx-text-fill: #666;" />
            </VBox>
        </VBox>
    </center>
    
    <bottom>
        <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-spacing: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, -5);">
            <HBox style="-fx-alignment: CENTER_RIGHT; -fx-spacing: 20;">
                <Label text="Subtotal:" style="-fx-font-size: 16px;" />
                <Label fx:id="subtotalLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            </HBox>
            <HBox style="-fx-alignment: CENTER_RIGHT; -fx-spacing: 20;">
                <Label text="IVA (16%):" style="-fx-font-size: 16px;" />
                <Label fx:id="ivaLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            </HBox>
            <HBox style="-fx-alignment: CENTER_RIGHT; -fx-spacing: 20;">
                <Label text="Total:" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <Label fx:id="totalLabel" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2ecc71;" />
            </HBox>
            
            <Button text="Proceder al pago" onAction="#procederAlPago" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-padding: 12; -fx-background-radius: 8;" />
        </VBox>
    </bottom>
</BorderPane>
