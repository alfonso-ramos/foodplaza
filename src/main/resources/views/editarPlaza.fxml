<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="asedi.controllers.EditarPlazaController">
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <VBox spacing="20" style="-fx-padding: 20;" maxWidth="800">
                <Label text="Editar Plaza" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                
                <GridPane hgap="10" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150"/>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="300"/>
                    </columnConstraints>
                    
                    <!-- Nombre -->
                    <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="nombreField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    
                    <!-- Dirección -->
                    <Label text="Dirección:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="direccionField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                    
                    <!-- Estado -->
                    <Label text="Estado:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                    <ComboBox fx:id="estadoCombo" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                    
                    <!-- Imagen actual -->
                    <Label text="Imagen actual:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                    <VBox spacing="10" GridPane.rowIndex="3" GridPane.columnIndex="1">
                        <ImageView fx:id="imagenActual" fitWidth="200" fitHeight="150" preserveRatio="true" 
                                 style="-fx-background-color: #f5f5f5; -fx-background-radius: 4;"/>
                        <Label fx:id="sinImagenLabel" text="Sin imagen" visible="false"/>
                    </VBox>
                    
                    <!-- Nueva imagen -->
                    <Label text="Nueva imagen (opcional):" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                    <VBox spacing="10" GridPane.rowIndex="4" GridPane.columnIndex="1">
                        <Button text="Seleccionar imagen" onAction="#seleccionarImagen" style="-fx-pref-width: 150;"/>
                        <Label fx:id="nombreArchivoLabel" text="Ningún archivo seleccionado" style="-fx-text-fill: #666;"/>
                        
                        <VBox fx:id="vistaPreviaContainer" spacing="10" visible="false">
                            <Label text="Vista previa:" style="-fx-font-weight: bold;"/>
                            <ImageView fx:id="vistaPreviaImagen" fitWidth="200" fitHeight="150" preserveRatio="true" 
                                     style="-fx-background-color: #f5f5f5; -fx-background-radius: 4;"/>
                        </VBox>
                    </VBox>
                    
                    <!-- Mensaje de error -->
                    <Label fx:id="errorLabel" style="-fx-text-fill: #d32f2f; -fx-wrap-text: true;" 
                           GridPane.columnSpan="2" GridPane.rowIndex="5" GridPane.columnIndex="0" visible="false"/>
                    
                    <!-- Botones -->
                    <HBox spacing="10" GridPane.columnSpan="2" GridPane.rowIndex="6" GridPane.columnIndex="0" 
                          alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
                        <Button text="Cancelar" onAction="#cancelar" styleClass="cancel-button" 
                                style="-fx-pref-width: 100;"/>
                        <Button text="Guardar Cambios" onAction="#guardarCambios" 
                                styleClass="save-button" style="-fx-pref-width: 150; -fx-font-weight: bold;"/>
                    </HBox>
                </GridPane>
            </VBox>
        </ScrollPane>
    </center>
    

</BorderPane>
