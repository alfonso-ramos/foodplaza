<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<DialogPane fx:id="dialogPane" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="asedi.controllers.gerencia.ProductoFormController"
           stylesheets="@/styles/gerente.css">
    
    <header>
        <VBox spacing="5">
            <Label fx:id="lblTitulo" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <Label text="Complete los campos del producto" style="-fx-text-fill: #666;" />
        </VBox>
    </header>
    
    <content>
        <GridPane hgap="15" vgap="15" style="-fx-padding: 10 0 0 0; -fx-pref-width: 500;">
            <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="txtNombre" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            
            <Label text="Descripción:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextArea fx:id="txtDescripcion" GridPane.columnIndex="1" GridPane.rowIndex="1" 
                     wrapText="true" prefRowCount="3" />
            
            <Label text="Precio:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <TextField fx:id="txtPrecio" style="-fx-pref-width: 100;" />
                <Label text="$" style="-fx-font-weight: bold;" />
            </HBox>
            
            <Label text="Categoría:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <ComboBox fx:id="cmbCategoria" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            
            <Label text="Disponible:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <CheckBox fx:id="chkDisponible" GridPane.columnIndex="1" GridPane.rowIndex="4" 
                     selected="true" />
            
            <Label text="Imagen:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="5">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button text="Seleccionar imagen" onAction="#seleccionarImagen" 
                           styleClass="btn-secondary" />
                    <Label fx:id="lblNombreImagen" text="Ninguna imagen seleccionada" 
                           style="-fx-text-fill: #666;" />
                </HBox>
                <ImageView fx:id="imgPreview" fitWidth="150" fitHeight="150" 
                          preserveRatio="true" style="-fx-border-color: #dee2e6; -fx-border-width: 1;" />
            </VBox>
        </GridPane>
    </content>
    
</DialogPane>
